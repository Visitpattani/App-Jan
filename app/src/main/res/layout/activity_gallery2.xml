<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="100">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="3"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:id="@+id/imagegall"
            android:scaleType="centerCrop"
            android:src="@drawable/loading"
            android:background="@drawable/loading"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/des_food"
            android:layout_marginTop="7dp"
            android:text="ข้อมูลข่าวสาร เเละงานอีเว้นท์"
            android:fontFamily="@font/mitr_semibold"
            android:textStyle="italic"
            android:textColor="@color/Dark"
            android:textSize="18sp"
            android:layout_below="@+id/image_description"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            android:layout_below="@+id/des_food"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:text="Canada"
            android:textSize="14sp"
            android:textColor="#000"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:layout_marginLeft="10dp"

                android:text="ที่อยู่"
                android:fontFamily="@font/mitr_semibold"
                android:id="@+id/loca"
                android:textSize="16sp"
                android:textColor="#000"
                android:textStyle="italic"
                android:layout_weight="0.1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/locate"
                android:layout_weight="0.85"
                android:text="Canada"
                android:textSize="16sp"
                android:textColor="#000"/>


        </LinearLayout>
        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:weightSum="1"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tell"
            android:layout_weight="0.05"
            android:layout_marginLeft="10dp"
            android:text="เบอร์ติดต่อ"
            android:fontFamily="@font/mitr_semibold"
            android:textSize="16sp"
            android:textColor="#000"
            android:textStyle="italic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tel"
            android:layout_below="@+id/locate"
            android:layout_toRightOf="@+id/tell"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.95"
            android:text="Canada"
            android:textSize="14sp"
            android:textColor="#000"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:weightSum="1"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Datee"
                android:layout_weight="0.05"
                android:layout_marginLeft="10dp"
                android:text="ระยะเวลา  "
                android:fontFamily="@font/mitr_semibold"
                android:textSize="16sp"
                android:textColor="#000"
                android:textStyle="italic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Date"
                android:layout_below="@+id/tel"
                android:layout_toRightOf="@+id/Datee"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.95"
                android:text="Timer"
                android:textSize="14sp"
                android:textColor="#000"/>
        </LinearLayout>





    </LinearLayout>
    <include layout="@layout/buttom_navi"/>

</RelativeLayout>
