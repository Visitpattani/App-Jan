<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="50dp"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="225dp"

            android:id="@+id/imagegall"
            android:scaleType="centerCrop"
            android:src="@drawable/loading"
            android:background="@drawable/loading"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/des_food"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="ข้อมูลข่าวสาร เเละงานอีเว้นท์"
            android:layout_below="@+id/imagegall"
            android:fontFamily="@font/mitr_semibold"
            android:textColor="@color/Dark"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            android:layout_below="@+id/des_food"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:text="Canada"
            android:textSize="14sp"
            android:textColor="#000"
            />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/loca"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/description"
                android:text="ที่อยู่"
                android:fontFamily="@font/mitr_semibold"
                android:textSize="16sp"
                android:textColor="#000"
                android:textStyle="italic"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/locate"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:text="Canada"
                android:textSize="16sp"
                android:layout_below="@+id/loca"
                android:textColor="#000"/>


            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:id="@+id/tell"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/locate"
                android:text="เบอร์ติดต่อ"
                android:fontFamily="@font/mitr_semibold"
                android:textSize="16sp"
                android:textColor="#000"
                android:textStyle="italic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tel"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:text="Canada"
                android:textSize="14sp"
                android:layout_below="@+id/tell"
                android:textColor="#000"/>


            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/Datee"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/tel"
                android:text="ระยะเวลา  "
                android:fontFamily="@font/mitr_semibold"
                android:textSize="16sp"
                android:textColor="#000"
                android:textStyle="italic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Date"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_below="@+id/Datee"
                android:text="Timer"
                android:textSize="14sp"
                android:textColor="#000"/>
            <TextView
                android:layout_marginTop="55dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

</ScrollView>
    <include layout="@layout/buttom_navi"/>
</RelativeLayout>
