<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="0dp"
    android:layout_margin="8dp"
    android:elevation="100dp"
    app:cardElevation="5dp"
    app:cardMaxElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/post_title"
            android:text="POST TITLE"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:textSize="18dp"
            android:fontFamily="@font/mitr_extralight"
            android:textStyle="bold"
            android:textColor="@color/colorBlueJean"/>

        <TextView
            android:id="@+id/post_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/post_title"
            android:layout_alignStart="@id/post_title"
            android:layout_below="@+id/post_title"
            android:paddingEnd="5dp"
            android:layout_toLeftOf="@+id/post_image"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:text="DESCRIPTION"
            android:textSize="14dp"
            android:fontFamily="@font/mitr_extralight"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/post_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/post_desc"
            android:layout_alignStart="@id/post_desc"
            android:layout_below="@+id/post_desc"
            android:paddingEnd="5dp"
            android:layout_toLeftOf="@+id/post_image"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:text="TIMER"
            android:textSize="14dp"
            android:fontFamily="@font/mitr_extralight"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/post_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/post_time"
            android:layout_alignStart="@id/post_time"
            android:layout_below="@+id/post_time"
            android:paddingEnd="5dp"
            android:layout_toLeftOf="@+id/post_image"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:text="PHONE"
            android:textSize="14dp"
            android:fontFamily="@font/mitr_extralight"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <ImageView
            android:layout_width="140dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:id="@+id/post_image"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>