<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="50dp"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:id="@+id/imagegall"
                android:scaleType="centerCrop"
                android:src="@drawable/loading"
                android:background="@drawable/loading"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_description"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Canada"
                android:layout_below="@+id/imagegall"
                android:fontFamily="@font/mitr_semibold"
                android:textSize="22sp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:text="Canada"
                android:layout_below="@+id/image_description"
                android:textSize="16sp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/location"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="กิจกรรมการท่องเที่ยว"
                android:fontFamily="@font/mitr_semibold"
                android:textSize="18sp"
                android:layout_below="@+id/description"
                android:textColor="#000"
                android:textStyle="italic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/location_input"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:text="Canada"
                android:textSize="16sp"
                android:layout_below="@+id/location"
                android:textColor="#000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cost"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="ค่าใช้จ่าย"
                android:fontFamily="@font/mitr_semibold"
                android:textSize="18sp"
                android:layout_below="@+id/location_input"
                android:textColor="#000"
                android:textStyle="italic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cost_input"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:text="Canada"
                android:textSize="16sp"
                android:layout_below="@+id/cost"
                android:textColor="#000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tel"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="ข้อมูลการติดต่อ"
                android:fontFamily="@font/mitr_semibold"
                android:textSize="18sp"
                android:layout_below="@+id/cost_input"
                android:textColor="#000"
                android:textStyle="italic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tel_input"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:text="Canada"
                android:textSize="16sp"
                android:layout_below="@+id/tel"
                android:textColor="#000"/>
            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </ScrollView>
    <include layout="@layout/buttom_navi"/>
</RelativeLayout>