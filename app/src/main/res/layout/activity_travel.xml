<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arahnaka.myapplication.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.BottomNavigationView

        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/white_grey_border_top"

        app:itemTextColor="#000000"
        app:itemIconTint="@color/Dark"
        app:menu="@menu/bottom_nav"
        />



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:background="@drawable/we"
                    android:textAlignment="center"
                    android:text="TRAVEL"
                    android:textSize="24sp"
                    android:gravity="bottom"
                    android:textColor="@color/Dark"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:background="@color/White">
                    <LinearLayout
                        android:id="@+id/bot1"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:orientation="vertical"
                        android:background="@color/colorGrapeFruit"
                        >
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_coin"
                            android:tint="@color/White"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:layout_marginTop="20dp"
                            android:background="@color/colorGrapeFruitDark"
                            android:textSize="16sp"
                            android:text="Exchange Rate"
                            android:textAlignment="center"
                            android:textColor="@color/White"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/bot2"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:orientation="vertical"
                        android:background="@color/colorBitterSweet"
                        >
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_highlighter"
                            android:tint="@color/White"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:layout_marginTop="20dp"
                            android:background="@color/colorBitterSweetDark"
                            android:textSize="16sp"
                            android:text="Highlights"
                            android:textAlignment="center"
                            android:textColor="@color/White"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/bot3"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:orientation="vertical"
                        android:background="@color/colorFlower"
                        >
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_dish"
                            android:tint="@color/White"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:layout_marginTop="20dp"
                            android:background="@color/colorFlowerDark"
                            android:textSize="16sp"
                            android:text="Food"
                            android:textAlignment="center"
                            android:textColor="@color/White"/>

                    </LinearLayout>


                </LinearLayout>
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:background="@color/White">
                    <LinearLayout
                        android:id="@+id/bot4"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:orientation="vertical"
                        android:background="@color/colorGrass"
                        >
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_shopping_cart"
                            android:tint="@color/White"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:layout_marginTop="20dp"
                            android:background="@color/colorGrassDark"
                            android:textSize="16sp"
                            android:text="Shopping"
                            android:textAlignment="center"
                            android:textColor="@color/White"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/bot5"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:orientation="vertical"
                        android:background="@color/colorBlueJean"
                        >
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_newspaper"
                            android:tint="@color/White"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:layout_marginTop="20dp"
                            android:background="@color/colorBlueJeanDark"
                            android:textSize="16sp"
                            android:text="News"
                            android:textAlignment="center"
                            android:textColor="@color/White"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/bot6"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:orientation="vertical"
                        android:background="@color/colorLavender"
                        >
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_bus"
                            android:tint="@color/White"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:layout_marginTop="20dp"
                            android:background="@color/colorLavenderDark"
                            android:textSize="16sp"
                            android:text="Tour Course"
                            android:textAlignment="center"
                            android:textColor="@color/White"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/bot7"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:orientation="vertical"
                        android:background="@color/colorMint"
                        >
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_dua_hands"
                            android:tint="@color/White"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:layout_marginTop="20dp"
                            android:background="@color/colorMintDark"
                            android:textSize="16sp"
                            android:text="Prayer"
                            android:textAlignment="center"
                            android:textColor="@color/White"/>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:background="@color/White">
                    <LinearLayout
                        android:id="@+id/bot8"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:orientation="vertical"
                        android:background="@color/colorPinkRose"
                        >
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_plane"
                            android:tint="@color/White"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:layout_marginTop="20dp"
                            android:background="@color/colorPinkRoseDark"
                            android:textSize="16sp"
                            android:text="Transport"
                            android:textAlignment="center"
                            android:textColor="@color/White"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/bot9"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:orientation="vertical"
                        android:background="@color/colorAqua"
                        >
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_support"
                            android:tint="@color/White"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:layout_marginTop="20dp"
                            android:background="@color/colorAquaDark"
                            android:textSize="16sp"
                            android:text="Service"
                            android:textAlignment="center"
                            android:textColor="@color/White"/>

                    </LinearLayout>


            </LinearLayout>

        </LinearLayout>


</RelativeLayout>
